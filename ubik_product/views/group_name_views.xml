<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Group Name Form View -->
    <record id="view_group_name_form" model="ir.ui.view">
        <field name="name">group.name.form</field>
        <field name="model">group.name</field>
        <field name="arch" type="xml">
            <form string="Group Name">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Group Name Tree View -->
    <record id="view_group_name_tree" model="ir.ui.view">
        <field name="name">group.name.tree</field>
        <field name="model">group.name</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    
    <!-- Group Name Action -->
    <record id="action_group_name" model="ir.actions.act_window">
        <field name="name">Group Name</field>
        <field name="res_model">group.name</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Group Names.
            </p>
        </field>
    </record>

    <!-- Master Menu under Product > Configuration -->
    <menuitem id="menu_stock_master_root"
              name="Master"
              parent="stock.menu_stock_config_settings"
              
              />

    <!-- Category Menu under Contacts > Configuration > Master -->
    <menuitem id="menu_group_name"
              name="Group Name"
              parent="ubik_product.menu_stock_master_root"
              action="action_group_name"
              sequence="1"
              />

</odoo>