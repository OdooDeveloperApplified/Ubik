<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Parameter Master Form View -->
    <record id="view_parameter_master_form" model="ir.ui.view">
        <field name="name">parameter.master.form</field>
        <field name="model">acceptance.criteria</field>
        <field name="arch" type="xml">
            <form string="Acceptance Criteria">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Parameter Master Tree View -->
    <record id="view_parameter_master_tree" model="ir.ui.view">
        <field name="name">parameter.master.tree</field>
        <field name="model">acceptance.criteria</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    
    <!-- Parameter Master Action -->
    <record id="action_parameter_master" model="ir.actions.act_window">
        <field name="name">Acceptance Criteria</field>
        <field name="res_model">acceptance.criteria</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Acceptance Criteria.
            </p>
        </field>
    </record>

    <!-- Parameter Master Menu under Product > Configuration -->
    <menuitem id="menu_stock_master_root"
              name="Master"
              parent="stock.menu_stock_config_settings"
              
              />

    <!-- Category Menu under Contacts > Configuration > Master -->
    <menuitem id="menu_parameter_master"
              name="Acceptance Criteria"
              parent="ubik_product.menu_stock_master_root"
              action="action_parameter_master"
              sequence="2"
              />

</odoo>